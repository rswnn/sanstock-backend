<!DOCTYPE html>
<html>
    <head>
        <style>
        table {
        font-family: arial, sans-serif;
        border-collapse: collapse;
        width: 100%;
        }

        td, th {
        border: 1px solid #dddddd;
        text-align: left;
        padding: 8px;
        }

        tr:nth-child(even) {
        background-color: #dddddd;
        }
        </style>
    </head>
    <body>
        <div style="width: 85%; margin: 0 7.5%;">
            <h3 style="text-align: center; padding-left: 50px;">Sales Purchase Report</h5>
                <h5 style="padding-left: 50px;">Date :</h5>
                <h5 style="padding-left: 50px;"><%= datas.startDate %><%= datas.lastDate ? ` - ${datas.lastDate}` : '' %></h5>
                <div style="text-align: center; padding-left: 50px;">   
                <table>
                    <tr>
                        <th>NO</th>
                        <th>SKU</th>
                        <th>SKU INDUK</th>
                        <th>NAMA PRODUK</th>
                        <th>VARIAN</th>
                        <th>SIZE</th>
                        <th>AUTHOR</th>
                        <th>SUPPLIER</th>
                        <th>QTY</th>
                        <th>TOTAL PEMBELIAN</th>
                    </tr>
                <% if (datas.datas.length > 0) { %>
                    <% datas.datas.forEach((datas, i) => {%>
                       <tr>
                           <td><%= i + 1 %></td>
                           <td><%= datas.sku %></td>
                           <td><%= datas.productsSkuInduk %></td>
                           <td><%= datas.nama_produk %></td>
                           <td><%= datas.varian %></td>
                           <td><%= datas.productSize %></td>
                           <td><%= datas.username %></td>
                           <td><%= datas.supplierName %></td>
                           <td><%= datas.qty %></td>
                           <td><%= datas.totalAllBuy %></td>
                        </tr>
                    <%  });%>
                <% }%>
                    <tr>
                        <td colspan="8">Total</td>
                        <td><%= datas.allQty %></td>
                        <td><%= datas.totalAllBuy %></td>
                    </tr>
                </table>
             </div>
        </div>
    </body>
</html>